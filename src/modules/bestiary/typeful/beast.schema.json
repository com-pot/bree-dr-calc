{
  "general": {
    "type": "schema",
    "schema": {
      "name": {
        "type": "text",
        "required": true
      },
      "breedingStation": {
        "type": "bestiary:relation.breedingStation",
        "required": true
      },
      "gender": {
        "type": "bestiary:gender",
        "required": false
      },
      "evidenceCode": {
        "type": "text"
      },
      "birthDay": {
        "type": "date"
      }
    }
  },
  "lineage": {
    "type": "schema",
    "schema": {
      "father": {
        "type": "bestiary:relation.beast",
        "itemFilter": [
          { "prop": "general.gender", "type": "=", "args": "f", "neg": true}
        ]
      },
      "mother": {
        "type": "bestiary:relation.beast",
        "itemFilter": [
          { "prop": "general.gender", "type": "=", "args": "m", "neg": true}
        ]
      },
      "wright": {
        "type": "number",
        "format": "percent",
        "precision": 8
      }
    }
  }
}
