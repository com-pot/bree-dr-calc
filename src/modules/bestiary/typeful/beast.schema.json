{
  "type": "object",
  "properties": {
    "general": {
      "type": "object",
      "properties": {
        "name": {"type": "string"},
        "breedingStation": {"type": "string", "options": "bestiary:relation.breedingStation"},
        "gender": {"type": "string", "options": "bestiary:gender", "nullable": true},
        "evidenceCode": {"type": "string"},
        "birthDay": {"type": "date"}
      }
    },
    "lineage": {
      "type": "object",
      "properties": {
        "father": {
          "type": "hasOne",
          "options": {
            "source": "bestiary:beast",
            "filter": [
              { "prop": "general.gender", "op": "=", "args": ["f"], "neg": true}
            ]
          }
        },
        "mother": {
          "type": "hasOne",
          "options": {
            "source": "bestiary:beast",
            "filter": [
              { "prop": "general.gender", "op": "=", "args": ["m"], "neg": true}
            ]
          }
        },
        "wright": {
          "type": "number",
          "format": "percent",
          "precision": 8
        }
      }
    }
  }
}
