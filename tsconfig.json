{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "types": [
      "vite/client",
    ],

    "baseUrl": ".",
    "paths": {
      "@typeful/utils/*": ["libs/@typeful/utils/src/*"],
      "@typeful/types/*": ["libs/@typeful/types/src/*"],
      "@typeful/schema/*": ["./libs/@typeful/schema/src/*"],
      "@typeful/model/*": ["./libs/@typeful/model/src/*"],
      "@typeful/model-vue/*": ["./libs/@typeful/model-vue/src/*"],
      "@typeful/storage/*": ["./libs/@typeful/storage/src/*"],
      "@typeful/storage-vue/*": ["./libs/@typeful/storage-vue/src/*"],

      "@typeful/vue-app/*": ["./libs/@typeful/vue-app/src/*"],
      "@typeful/vue-utils/*": ["./libs/@typeful/vue-utils/src/*"],
      "@typeful/vue-form": ["./libs/@typeful/vue-form/src/index.ts"],
      "@typeful/vue-form/*": ["./libs/@typeful/vue-form/src/*"],

      "@vue-tippy": ["libs/vue-tippy/src/index.ts"],
      "@app/*": ["src/modules/app/*"],
      "@/*": ["src/*"]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "src/**/*.ts", "src/**/*.tsx", "src/**/*.vue",
    "libs/**/*.ts", "libs/**/*.tsx", "libs/**/*.vue",
    "test/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "*.spec.ts"
  ]
}
