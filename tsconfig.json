{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": ".",
    "types": [
      "webpack-env",
      "mocha",
      "chai"
    ],
    "paths": {
      "@i18n": ["libs/i18n/src/index.ts"],
      "@i18n/*": ["libs/i18n/src/*"],
      "@typeful/schema/*": ["libs/@typeful/schema/src/*"],
      "@vtf-typeful": ["libs/@vtf/typeful/src/index.ts"],
      "@vtf-typeful/*": ["libs/@vtf/typeful/src/*"],
      "@vtf-form": ["libs/@vtf/form/src"],
      "@vtf-collection": ["libs/@vtf/collection/src/index.ts"],
      "@vtf-collection/*": ["libs/@vtf/collection/src/*"],
      "@vtf-ui/*": ["libs/@vtf/ui/src/*"],
      "@vue-tippy": ["libs/vue-tippy/src/index.ts"],
      "@app/*": ["src/modules/app/*"],
      "@/*": [
        "src/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "*.spec.ts"
  ]
}
